<a href="<%= band_url(@album.band) %>">Back to Band</a>

<h1>Album: <%= @album.title %></h1>
<h3>Band: <%= @album.band.name %></h3>


<form action="<%= edit_album_url %>" method="get">
  <%= auth_token %>
  <input type="submit" value="Edit Album">
</form>

<form action="<%= album_url %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Album">
</form>